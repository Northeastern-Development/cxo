{% if post.post_type == 'topical_post' and post.link %}
  <script>
    var a = document.createElement('a');
    a.href = jQuery('.article-wrapper').data('link');
    a.style.display="none";
    document.body.appendChild(a);

    ga('set', {'page': a.pathname, 'location': a.href});
    ga('send', 'pageview');

    document.body.removeChild(a);
  </script>
{% else %}
  <script>
    ga('send', 'pageview');
  </script>
{% endif %}

