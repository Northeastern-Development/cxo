<!DOCTYPE html>
<!--[if lt IE 7]><html lang="en-US" class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html lang="en-US" class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html lang="en-US" class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html lang="en-US" class="no-js" {{site.language_attributes}}> <!--<![endif]-->
<head>
  <meta charset="{{site.charset}}" />

  <title>
      {% if wp_title %}
          {{ wp_title }} - {{ site.name }}
      {% else %}
          {{ site.name }}
      {% endif %}
  </title>

  <link rel="stylesheet" id="cxo-theme-css" href="{{ theme.path }}/static/build/css/style.css?v={{ css_last_modified }}" type="text/css" media="all" />

  <!-- Favicons & App Icons -->
  <link rel="apple-touch-icon" sizes="57x57" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-57x57.png">
  <link rel="apple-touch-icon" sizes="60x60" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-60x60.png">
  <link rel="apple-touch-icon" sizes="72x72" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="76x76" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-76x76.png">
  <link rel="apple-touch-icon" sizes="114x114" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-114x114.png">
  <link rel="apple-touch-icon" sizes="120x120" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-120x120.png">
  <link rel="apple-touch-icon" sizes="144x144" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-144x144.png">
  <link rel="apple-touch-icon" sizes="152x152" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-152x152.png">
  <link rel="apple-touch-icon" sizes="180x180" href="{{ theme.path }}/static/img/touch-icons/apple-touch-icon-180x180.png">
  <link rel="icon" type="image/png" href="{{ theme.path }}/static/img/touch-icons/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="{{ theme.path }}/static/img/touch-icons/favicon-96x96.png" sizes="96x96">
  <link rel="icon" type="image/png" href="{{ theme.path }}/static/img/touch-icons/favicon-16x16.png" sizes="16x16">
  <link rel="shortcut icon" href="{{ theme.path }}/static/img/touch-icons/favicon.ico">

  <meta name="description" content="{{ site.description }}">

  <!-- Open Graph (Facebook) -->
  <meta property="og:site_name" content="{{ site.name }}">
  <meta property="og:site" content="{{ site.link }}">
  <meta property="og:locale" content="en_us">
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ wp_title ? wp_title : site.name}}">
  <meta property="og:url" content="{{ post.link|default(site.link) }}">
  <meta property="og:description" content="{{ post.description|default(site.description) }}">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@cxo_magazine">
  <meta name="twitter:title" content="{{ wp_title ? wp_title : site.name }}">
  <meta name="twitter:description" content="{{ post.description|default(site.description) }}">

  {% if post.thumbnail %}
    <meta property="og:image" content="{{ post.thumbnail.src }}">
    <meta name="twitter:image" content="{{ post.thumbnail.src }}">
  {% else %}
    <meta property="og:image" content="{{ theme.path }}/static/img/og-logo.jpg">
    <meta name="twitter:image" content="{{ theme.path }}/static/img/og-logo.jpg">
  {% endif %}

  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="pingback" href="{{ site.pingback_url }}" />


  {{ function('wp_head') }}
